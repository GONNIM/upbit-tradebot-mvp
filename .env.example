# 업비트 트레이드봇 v2 환경 설정 파일
# 복사하여 .env 파일로 사용하고 실제 값으로 변경하세요

# =============================================================================
# 데이터베이스 설정
# =============================================================================

# DB URL 설정 (SQLite 또는 MySQL 선택)
# SQLite (기본값 - 각 사용자별 파일 분리)
DB_URL=sqlite:///tradebot_default.db

# MySQL (공유 DB 사용 시)
# DB_URL=mysql+pymysql://username:password@localhost:3306/tradebot_db?charset=utf8mb4

# DB 접두사 (SQLite 파일 이름에 사용)
DB_PREFIX=tradebot

# =============================================================================
# 업비트 API 설정
# =============================================================================

# 업비트 API 키 (실제 운영 시에만 설정)
UPBIT_ACCESS=your_upbit_access_key_here
UPBIT_SECRET=your_upbit_secret_key_here

# =============================================================================
# AI/ML 서비스 설정
# =============================================================================

# OpenAI API 키 (선택적 - AI 분석 기능 사용 시)
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# 애플리케이션 설정
# =============================================================================

# 디버그 모드
DEBUG=False

# 로그 레벨 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# 데이터 보존 기간 (일)
DATA_RETENTION_DAYS=90

# =============================================================================
# 거래 설정
# =============================================================================

# 최소 주문 금액 (KRW)
MIN_ORDER_AMOUNT=5000

# 최대 포지션 크기 (KRW)
MAX_POSITION_SIZE=500000

# 기본 수수료율 (0.05%)
DEFAULT_COMMISSION_RATE=0.0005

# 최대 손실률 (2%)
MAX_LOSS_RATE=0.02

# 익절률 (3%)
TAKE_PROFIT_RATE=0.03

# 트레일링 스톱률 (2%)
TRAILING_STOP_RATE=0.02

# 최소 보유 기간 (분)
MIN_HOLDING_PERIOD=5

# 일 최대 거래 횟수
MAX_DAILY_TRADES=10

# =============================================================================
# 보안 설정
# =============================================================================

# 세션 비밀 키 (반드시 변경하세요)
SECRET_KEY=your_secret_key_here_change_this_in_production

# 암호화 키 (선택적)
ENCRYPTION_KEY=your_encryption_key_here

# =============================================================================
# 서버 설정
# =============================================================================

# 서버 포트
PORT=8501

# 서버 주소
HOST=0.0.0.0

# =============================================================================
# 모니터링 설정
# =============================================================================

# 헬스 체크 간격 (초)
HEALTH_CHECK_INTERVAL=30

# 메트릭 수집 활성화
ENABLE_METRICS=True

# =============================================================================
# 개발/테스트 설정
# =============================================================================

# 테스트 모드 (True: 모의 거래, False: 실제 거래)
TEST_MODE=True

# 백테스팅 모드
BACKTESTING_MODE=False

# =============================================================================
# 알림 설정 (선택적)
# =============================================================================

# Slack 웹훅 URL
SLACK_WEBHOOK_URL=

# 이메일 알림 설정
EMAIL_ENABLED=False
EMAIL_SMTP_SERVER=
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_FROM=
EMAIL_TO=

# =============================================================================
# 캐시 설정
# =============================================================================

# Redis URL (선택적 - 캐시 사용 시)
REDIS_URL=redis://localhost:6379/0

# 캐시 만료 시간 (초)
CACHE_EXPIRE=3600

# =============================================================================
# 데이터 소스 설정
# =============================================================================

# 데이터 피드 업데이트 간격 (초)
DATA_FEED_INTERVAL=1

# 최대 재시도 횟수
MAX_RETRY_ATTEMPTS=3

# 재시도 지연 시간 (초)
RETRY_DELAY=1

# =============================================================================
# 파일 경로 설정
# =============================================================================

# 로그 파일 경로
LOG_FILE_PATH=logs/

# 데이터 백업 경로
BACKUP_PATH=backups/

# 마이그레이션 파일 경로
MIGRATIONS_PATH=migrations/

# =============================================================================
# 성능 설정
# =============================================================================

# DB 연결 풀 크기
DB_POOL_SIZE=5

# DB 연결 풀 최대 오버플로우
DB_POOL_MAX_OVERFLOW=10

# DB 연결 타임아웃 (초)
DB_CONNECTION_TIMEOUT=30

# DB 연결 재활용 시간 (초)
DB_POOL_RECYCLE=3600

# =============================================================================
# 유효성 검사 설정
# =============================================================================

# 사용자 이름 최소 길이
MIN_USERNAME_LENGTH=3

# 사용자 이름 최대 길이
MAX_USERNAME_LENGTH=50

# 비밀번호 최소 길이
MIN_PASSWORD_LENGTH=8

# =============================================================================
# 기타 설정
# =============================================================================

# 타임존
TIMEZONE=Asia/Seoul

# 언어 설정
LANGUAGE=ko

# =============================================================================
# 사용 예시
# =============================================================================

# 1. SQLite 사용 (기본)
# DB_URL=sqlite:///tradebot_default.db
# DB_PREFIX=tradebot

# 2. MySQL 사용
# DB_URL=mysql+pymysql://tradebot_user:password@localhost:3306/tradebot_db?charset=utf8mb4
# DB_PREFIX=tradebot

# 3. 테스트 환경
# DEBUG=True
# TEST_MODE=True
# LOG_LEVEL=DEBUG

# 4. 프로덕션 환경
# DEBUG=False
# TEST_MODE=False
# LOG_LEVEL=INFO
# SECRET_KEY=your_production_secret_key_here

# =============================================================================
# 보안 경고
# =============================================================================

# 이 파일은 버전 관리에 포함되지만 실제 값은 .env 파일에 저장하세요
# .env 파일은 .gitignore에 추가되어 있어야 합니다
# 절대로 실제 API 키나 비밀 정보를 이 파일에 커밋하지 마세요